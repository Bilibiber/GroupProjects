<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    var alreadyFilled = false;
    $(".autocomplete input").click(function () {
        if (!alreadyFilled) {
            $(".dialog").addClass("open");
        }
    });
    $("body").on("click", ".dialog > div", function () {
        $(".autocomplete input").val($(this).text()).focus();
        $(".autocomplete.close").addClass("visible");
        alreadyFilled = true;
    })
    $(document).ready(function () {
        $("#CategoaryID").change(function () {
            var categoryList = document.getElementById("CategoaryID");
            var selectedID = categoryList.options[categoryList.selectedIndex].value;
            $.get("/Search/GetSubCategory", { CategoryID: selectedID }, function (data) {
                $(".dialog").empty();
                $.each(data, function (index, row) {
                    $(".dialog").append("<div>" + row.SubcategoryName + "</div>");

                    console.log(row.SubcategoryName);
                });
            });
        })
    });
    function match(str) {
        str = str.toLowerCase();
        $(".dialog").empty();
        var categoryList = document.getElementById("CategoaryID");
        var selectedID = categoryList.options[categoryList.selectedIndex].value;
        $.get("/Search/GetSubCategory", { CategoryID: selectedID }, function (data) {
            $(".dialog").empty();
            $.each(data, function (index, row) {
                if (row.SubcategoryName.toLowerCase().startsWith(str)) {
                    $(".dialog").append("<div>" + row.SubcategoryName + "</div>");
                }
            });
        });
    }
    $(".autocomplete input").on("input", function () {
        $(".dialog").addClass("open");
        alreadyFilled = false;
        match($(this).val());
    });
    $("body").click(function (e) {
        if (!$(e.target).is("input, .close")) {
            $(".dialog").removeClass("open");
        }
    });
</script>